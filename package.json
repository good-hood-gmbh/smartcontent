{
  "name": "smartcontent",
  "description": "Converts UGC to HTML",
  "author": "Nebenan.de <max@nebenan.de>",
  "license": "MIT",
  "readmeFilename": "README.md",
  "repository": "good-hood-gmbh/smartcontent",
  "bugs": "https://github.com/good-hood-gmbh/smartcontent/issues",
  "version": "3.8.1",
  "keywords": [
    "content",
    "parser",
    "markdown"
  ],
  "main": "lib/index.js",
  "scripts": {
    "reinstall": "rm -rf node_modules package-lock.json && npm install",
    "check": "npm test && npm run lint && echo \"\\033[0;32mReady to publish\\033[0m\"",
    "clean": "rm -rf ./lib/ || exit 1",
    "compile": "NODE_ENV=production babel src --out-dir lib --copy-files",
    "minify": "find ./lib -name '*.js' -exec terser {} -o {} --config-file terser.json \\;",
    "build": "npm run compile && npm run minify",
    "prepublishOnly": "npm run check && npm run clean && npm run build",
    "lint": "eslint ./",
    "lint:tofile": "eslint --no-color -o ./eslint-report.log ./",
    "test": "npm run compile && TZ='GMT' mocha \"test/**/*.js\"",
    "test:tofile": "npm run compile && TZ='GMT' mocha --no-colors -R spec \"test/**/*.js\" 2>&1 | tee test-report.log"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-json-strings": "^7.2.0",
    "@babel/plugin-transform-strict-mode": "^7.2.0",
    "@babel/preset-env": "^7.6.3",
    "babel-plugin-add-module-exports": "^1.0.2",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-nebenan-base": "^1.3.1",
    "mocha": "^6.2.2",
    "regexgen": "^1.3.0",
    "terser": "^4.3.9",
    "tlds": "^1.203.1"
  },
  "dependencies": {
    "escape-html": "^1.0.3",
    "lodash.merge": "^4.6.2"
  }
}
